<%= render 'layouts/menu' %>

<p id="notice"><%= notice %></p>

<h1>Мои устройства</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.UID %></td>
        <td><%= link_to 'Показать', device %></td>
        <td><%= link_to 'Редактировать', edit_device_path(device) %></td>
        <td><%= link_to 'Удалить', device, method: :delete, data: { confirm: 'Вы уверены? Это действие необратимо!' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Добавить устройство', new_device_path %>

<br>
<%= link_to 'Главная', root_path %>
